# Mya View Configuration
# Your personal health companion powered by Mya
# Copy to .env and fill in values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=mya_view
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=mya_view
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

NEO4J_AUTH=neo4j/changeme_secure_password
NEO4J_HOST=neo4j
NEO4J_BOLT_PORT=7687
NEO4J_HTTP_PORT=7474

# =============================================================================
# OLLAMA
# =============================================================================
OLLAMA_HOST=http://host.docker.internal:11434
# Models to preload (comma-separated)
OLLAMA_MODELS=llama3.2-vision:11b,openbiollm:8b,llama3.2:3b

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=INFO

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=changeme_generate_secure_key
# Session timeout in minutes
SESSION_TIMEOUT=60

# =============================================================================
# MODEL ROUTING
# =============================================================================
# Primary VLM for vision tasks
PRIMARY_VLM=llama3.2-vision:11b
# Text-only medical model
MEDICAL_TEXT_MODEL=openbiollm:8b
# Coordinator model (lightweight)
COORDINATOR_MODEL=llama3.2:3b
# Embedding model
EMBEDDING_MODEL=bge-m3

# =============================================================================
# PRIVACY SETTINGS
# =============================================================================
# Categories requiring explicit consent for cross-member queries
CONSENT_REQUIRED_CATEGORIES=sexual_health,reproductive,std_history

# =============================================================================
# HARDWARE
# =============================================================================
# Device for inference: auto, cuda, mps, cpu
DEVICE=auto
# Max concurrent inference requests
MAX_CONCURRENT_INFERENCE=2
